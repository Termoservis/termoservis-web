@using Termoservis.Web.Helpers
@model Termoservis.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="pt-4">
    @Html.Header()
</div>

<div class="row">
    <div class="col">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "col", role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group row">
                @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Password, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-10">
                    <input type="submit" class="btn btn-default" value="Register" />
                </div>
            </div>
        }
    </div>
</div>
