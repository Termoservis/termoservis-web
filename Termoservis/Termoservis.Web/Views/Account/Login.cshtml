@using Termoservis.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="row">
	<h2 class="col-xs-12 p-t-2">@ViewBag.Title</h2>
</div>

<div class="row">
	@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class="col-xs-12", role = "form" }))
	{
		@Html.AntiForgeryToken()

		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group row">
			@Html.LabelFor(m => m.Email, new {@class = "col-md-2 form-control-label" })
			<div class="col-md-10">
				@Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
				@Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
			</div>
		</div>

		<div class="form-group row">
			@Html.LabelFor(m => m.Password, new {@class = "col-md-2 form-control-label"})
			<div class="col-md-10">
				@Html.PasswordFor(m => m.Password, new {@class = "form-control"})
				@Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
			</div>
		</div>

		<div class="form-group row">
			<div class="col-md-offset-2 col-md-10">
				<div class="checkbox">
					<label>
						@Html.CheckBoxFor(m => m.RememberMe)
						@Html.LabelFor(m => m.RememberMe)
					</label>
				</div>
			</div>
		</div>

		<div class="form-group row">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Log in" class="btn btn-default"/>
			</div>
		</div>

		<div class="form-group row">
			<p class="col-md-offset-2 col-md-10">
				@Html.ActionLink("Register as a new user", "Register")
			</p>
		</div>
	}
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}