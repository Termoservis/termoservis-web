@using Termoservis.Web.Helpers
@model List<Termoservis.Models.Customer>

@{
    ViewBag.Title = "Korisnici";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Dodaj korisnika", "Create")
</p>

<h2>Korisnici</h2>

<table class="table table-hover">
    <thead class="thead-default">
        <tr>
            <th>@Html.DisplayColumnNameFor(Model, model => model.Name)</th>
            <th>@Html.DisplayColumnNameFor(Model, model => model.Address)</th>
            <th>@Html.DisplayColumnNameFor(Model, model => model.Note)</th>
            <th>@Html.DisplayColumnNameFor(Model, model => model.CreationDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.StreetAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
