@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Promijena zaporke";
}

<h2 class="thin">@ViewData["Title"].</h2>
<form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal" role="form">

	<!-- Errors list -->
	<div class="row">
		<div asp-validation-summary="ValidationSummary.All" class="text-danger col m10 l8"></div>
	</div>

	<!-- Password input field -->
	<div class="row">
		<div class="input-field col m10 l8">
			<input asp-for="OldPassword" class="form-control" />
			<span asp-validation-for="OldPassword" class="text-danger"></span>
			<label asp-for="OldPassword">Stara zaporka</label>
		</div>
	</div>

	<!-- Password confirm input field -->
	<div class="row">
		<div class="input-field col m10 l8">
			<input asp-for="NewPassword" class="form-control" />
			<span asp-validation-for="NewPassword" class="text-danger"></span>
			<label asp-for="NewPassword">Nova zaporka</label>
		</div>
	</div>

	<!-- Password confirm input field -->
	<div class="row">
		<div class="input-field col m10 l8">
			<input asp-for="ConfirmPassword" class="form-control" />
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			<label asp-for="ConfirmPassword">Ponovi zaporku</label>
		</div>
	</div>

	<!-- Submit button -->
	<div class="row">
		<div class="col m10 l8 offset-m2">
			<button type="submit" class="waves-effect waves-light btn btn-default red">Promijeni zaporku</button>
		</div>
	</div>

	<!-- Forgot password -->
	<p>
		<a asp-controller="Account" asp-action="ForgotPassword">Zaboravili ste zaporku?</a>
	</p>

</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
